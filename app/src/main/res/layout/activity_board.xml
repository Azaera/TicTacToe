<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:shrinkColumns="*"  android:stretchColumns="*" android:background="#ffffff">

    <TableRow
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">

        <Button
            android:text=""
            android:id="@+id/one"
            android:layout_weight="1"
            android:background="@drawable/boardlayout"
            android:textColor="#000000"
            android:height="100dp"
            android:padding="20dp"
            android:gravity="center"/>

        <Button
            android:text=""
            android:id="@+id/two"
            android:layout_weight="1"
            android:background="@drawable/boardlayout"
            android:textColor="#000000"
            android:height="100dp"
            android:padding="20dip"
            android:gravity="center"/>

        <Button
            android:text=""
            android:id="@+id/three"
            android:layout_weight="1"
            android:background="@drawable/boardlayout"
            android:textColor="#000000"
            android:height="100dp"
            android:padding="20dip"
            android:gravity="center"/>
    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">

        <Button
            android:text=""
            android:id="@+id/four"
            android:layout_weight="1"
            android:background="@drawable/boardlayout"
            android:textColor="#000000"
            android:height="100dp"
            android:padding="20dip"
            android:gravity="center"/>

        <Button
            android:text=""
            android:id="@+id/five"
            android:layout_weight="1"
            android:background="@drawable/boardlayout"
            android:textColor="#00FF00"
            android:height="100dp"
            android:padding="20dip"
            android:gravity="center"/>

        <Button
            android:text=""
            android:id="@+id/six"
            android:layout_weight="1"
            android:background="@drawable/boardlayout"
            android:textColor="#000000"
            android:height="100dp"
            android:padding="20dip"
            android:gravity="center"/>
    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">

        <Button
            android:text=""
            android:id="@+id/seven"
            android:layout_weight="1"
            android:background="@drawable/boardlayout"
            android:textColor="#000000"
            android:height="100dp"
            android:padding="20dip"
            android:gravity="center"/>

        <Button
            android:text=""
            android:id="@+id/eight"
            android:layout_weight="1"
            android:background="@drawable/boardlayout"
            android:textColor="#000000"
            android:height="100dp"
            android:padding="20dip"
            android:gravity="center"/>

        <Button
            android:text=""
            android:id="@+id/nine"
            android:layout_weight="1"
            android:background="@drawable/boardlayout"
            android:textColor="#000000"
            android:height="100dp"
            android:padding="20dip"
            android:gravity="center"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:paddingLeft="5dp"
            android:id="@+id/firstPlayer"
            android:text="@string/playerOne"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/secondPlayer"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="@string/playerTwo" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="10dp"
            android:id="@+id/firstPlayerWins"
            android:text="@string/playerOneWins"/>

        <TextView
            android:id="@+id/winCount1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="0"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="10dp"
            android:id="@+id/draw"
            android:text="@string/draw"/>

        <TextView
            android:id="@+id/drawCount"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="10dp"
            android:text="0"/>

        <TextView
            android:id="@+id/secondPlayerWins"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="10dp"
            android:text="@string/playerTwoWins" />

        <TextView
            android:id="@+id/winCount2"
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:textSize="10dp"
            android:text="0"/>
    </TableRow>

</TableLayout>